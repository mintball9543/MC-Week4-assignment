<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkBox1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="트와이스" />

                    <CheckBox
                        android:id="@+id/checkBox2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="BTS" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="#41FF3A">

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rgroup1">

                        <RadioButton
                            android:id="@+id/rMem1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="정국" />

                        <RadioButton
                            android:id="@+id/rMem2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="지민" />

                        <RadioButton
                            android:id="@+id/rMem3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="태형" />

                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#4641D9">

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rgroup2">

                    <RadioButton
                        android:id="@+id/rSize1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="fitCenter" />

                    <RadioButton
                        android:id="@+id/rSize2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Matrix" />

                    <RadioButton
                        android:id="@+id/rSize3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="fitXY" />

                    <RadioButton
                        android:id="@+id/rSize4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="center" />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:srcCompat="@tools:sample/avatars" />
    </LinearLayout>
</LinearLayout>
